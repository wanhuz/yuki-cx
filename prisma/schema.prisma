generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL_PRISMA")
}

model Settings {
  id    Int     @id @default(autoincrement())
  key   String  @unique
  value String?
}

model AnimeIdMap {
  id            Int     @id @default(autoincrement())
  title         String
  anidb_id      Int
  tvdb_id       Int
  season_number Int 

  resolved_at   DateTime @default(now())

  @@unique([anidb_id, tvdb_id, season_number])
  @@index([anidb_id])
}

model AnimeScheduler {
  id                      Int     @id @default(autoincrement())
  ab_id                   Int     @unique
  anidb_id                Int     @default(-1)
  mal_id                  Int     @default(-1)
  anilist_id              Int     @default(-1)
  tvdb_id                 Int     @default(-1)
  series_name             String
  filter_property         String  @default("720p")
  last_fetched_episode    Int     @default(0)
  last_fetched_at         DateTime @default(now())
  soft_deleted            Boolean    @default(false)
  references              AnimeSchedulerReference[]
  filter                  AnimeSchedulerFilter[]
}

model ProcessedTorrent {
  id          Int    @id @default(autoincrement())
  torrent_id  Int    @unique
  processedAt DateTime @default(now())
}

model AnimeSchedulerReference {
  id                        Int             @id @default(autoincrement())
  scheduler_id              Int
  series_name               String
  studio_name               String
  summary                   String
  tags                      String
  poster_url                String
  airing_time               DateTime?
  episodes                  AnimeSchedulerEpisodeReference[]

  animeScheduler  AnimeScheduler  @relation(fields: [scheduler_id], references: [id])
}

model AnimeSchedulerFilter {
  id              Int     @id @default(autoincrement())
  scheduler_id    Int
  category        String  // values: "QUALITY", "GROUP", "EXTENSION"
  mode            String  // values: "ACCEPT", "REJECT"
  value           String  

  animeScheduler  AnimeScheduler @relation(fields: [scheduler_id], references: [id])
}

model AnimeSchedulerEpisodeReference {
  id                Int      @id @default(autoincrement())
  episode_title     String?
  episode_number    Int
  episode_date      DateTime

  scheduler_ref_id  Int
  animeSchedulerReference AnimeSchedulerReference @relation(fields: [scheduler_ref_id], references: [id], onDelete: Cascade)

  @@unique([scheduler_ref_id, episode_number])
}

model DownloadLogs {
  id                    Int @id @default(autoincrement())
  title                 String
  scheduler_torrent_id  Int?
  download_at           DateTime
}

model AnimeResource {
  id            Int @id @default(autoincrement())
  ab_id         Int
  ab_title      String
  anidb_id      Int
  banner_url    String
  logo_url      String

  @@unique([anidb_id])
}